<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_gravity="center"
                android:background="@drawable/weather_103" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="新闻"
                android:textColor="@color/color_white"
                android:textSize="11sp" />
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/news_top"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="头条"
                    android:textColor="@color/color_news_gray"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/news_guonei"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="国内"
                    android:textColor="@color/color_news_gray"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/news_guoji"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="国际"
                    android:textColor="@color/color_news_gray"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/news_shehui"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="社会"
                    android:textColor="@color/color_news_gray"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/news_yule"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="娱乐"
                    android:textColor="@color/color_news_gray"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/news_tiyu"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="体育"
                    android:textColor="@color/color_news_gray"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/news_junshi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="军事"
                    android:textColor="@color/color_news_gray"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/news_caijing"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="财经"
                    android:textColor="@color/color_news_gray"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/news_shishang"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="时尚"
                    android:textColor="@color/color_news_gray"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/news_keji"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="科技"
                    android:textColor="@color/color_news_gray"
                    android:textSize="18sp" />
            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ListView
            android:id="@+id/newsListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/model_menu"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"></ListView>

        <LinearLayout
            android:id="@+id/model_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <include layout="@layout/model" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
